{
  "expo": {
    "name": "fit-app-mobile",
    "slug": "fit-app-mobile",
    "version": "1.0.0",
    "scheme": "fitapp",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fitapp.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.fitapp.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "name": "Fit App",
      "shortName": "Fit App",
      "description": "A unified fitness tracking app combining gym workouts, calorie tracking, and step counting",
      "backgroundColor": "#0E0E14",
      "themeColor": "#3A9BFF"
    },
    "plugins": [
      "expo-sqlite",
      "expo-secure-store",
      "expo-web-browser"
    ]
  }
}
